{
    "name": "refynd/refynd",
    "description": "The Refynd Application Skeleton - Create beautiful applications with elegant simplicity",
    "keywords": [
        "refynd",
        "framework",
        "application",
        "skeleton",
        "php",
        "mvc",
        "starter"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^8.2",
        "refynd/framework": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "serve": "php -S localhost:8000 -t public",
        "test": "phpunit",
        "analyse": "phpstan analyse app --level=6",
        "post-create-project-cmd": [
            "@php -r \"copy('.env.example', '.env');\"",
            "@php -r \"echo 'Refynd application created successfully!\\\\n';\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

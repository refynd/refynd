{
  "name": "refynd/refynd",
  "description": "The Refynd Application Skeleton - Create beautiful applications with elegant simplicity",
  "keywords": [
    "refynd",
    "framework",
    "application",
    "skeleton",
    "php",
    "mvc",
    "starter"
  ],
  "license": "MIT",
  "type": "project",
  "require": {
    "php": "^8.4",
    "refynd/framework": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "phpstan/phpstan": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "files": [
      "app/Support/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "serve": "php -S localhost:8000 -t public",
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage",
    "analyse": "phpstan analyse app --level=6",
    "check": [
      "@analyse",
      "@test"
    ],
    "post-create-project-cmd": [
      "@php -r \"copy('.env.example', '.env');\"",
      "@php -r \"echo 'ðŸš€ Refynd application created successfully!\\\\n';\"",
      "@php -r \"echo 'ðŸ’¡ Visit http://localhost:8000 to get started\\\\n\\\\n';\""
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
